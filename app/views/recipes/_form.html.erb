<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  Ingredients:
  <%= f.fields_for :ingredients do |ingredient| %>
    Name: <%= ingredient.label :name %>
    Quantity: <%= ingredient.text_field :name %>
    <br>
    Name: <%= ingredient.label :quantity %>
    Quantity: <%= ingredient.text_field :quantity %>
    <br>
  <% end %>

  <%= f.submit  %>
<% end %>
